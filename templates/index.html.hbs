    </script>
  </head>

  <body>
    <h1>🏦 Best Bank 🏦</h1>
    <h2>
      <form action="/logout" method="post" accept-charset="utf-8">
        Welcome to your account <b><i><span id="name"/></i></b>.
        <input type="submit" id="logout" value="logout" />
      </form>
    </h2>
    <table>
      <tr>
        <td style="text-align:left;background-color:palegreen; padding: 0px 0px;">
        <div id="account_info">
          <p>Balance: 💵 <span id="balance"/></p>
        </div>
        <td>
      </tr>
    </tr>
    <tr>
      <td style="text-align:left;background-color:gold; padding: 0px 0px;">
        <div id="account_info">
          <p>Transaction History<br/>
            <pre>
              <span id="transactions"/>
            </pre>
          </p>
        </div>
      </td>
      <td valign="top" style="background-color:lightgray">
        <p>What would you like to do ?</p>
        <div id="transaction_div">
          💵<input type="number" id="transaction_amount"
                   min="0.00" step="0.01" max="9999"
                   placeholder="0.00" style="width: 120px" />
          <input type="submit" id="withdraw" onclick="transaction('withdraw')" value="withdraw" />
          <input type="submit" id="deposit" onclick="transaction('deposit')" value="deposit" />
        </div>
      </td>
    </tr>
  </table>
